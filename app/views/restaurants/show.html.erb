<h1>Restaurant details</h1>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<h2>Reviews</h2>
<ul>
<% @restaurant.reviews.each do |review| %>
 <li><%= review.content %> - <%= review.rating %>⭐️</li>
<% end %>
</ul>

<%= link_to "Leave a review", new_restaurant_review_path(@restaurant) %>
