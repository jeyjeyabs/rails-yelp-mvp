<table class="table table-striped mt-30">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td class="align-middle"><%= restaurant.name %></td>
        <td class="align-middle"><%= restaurant.address %></td>
        <td class="align-middle"><%= restaurant.category %></td>
        <td class="align-middle"><%= link_to 'Show', restaurant, class: "btn btn-primary text-decoration-none" %></td>
        <td class="align-middle"><%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-secondary text-decoration-none" %></td>
        <td class="align-middle"><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger text-decoration-none" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-primary text-decoration-none" %>
